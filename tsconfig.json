{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES6",
    "module": "ESNext",
    "noEmitOnError": true,
    "declaration": true,
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "rootDir": "./src",
    "allowJs": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "*": ["node_modules/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*.ts"]
}
